{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block title %}{{controller_name}}{% endblock %}

{% block body %}
<span id="menuHamburger" class="hamburger-icon">
  <span class="fa fa-bars"></span>                
</span>
<header id="mainMenu" class="bg-light py-3 mb-4 border-bottom containerSearch">
  <div class="container d-flex flex-wrap justify-content-center">  

    {% include 'block/search.twig' %}
    
  </div>
</header>
<div class="ruban_container"> 
  <div class="ruban"> 
  </div>
</div>
<div class='list-category'>
  <h2>Liste des catégories</h2>
  <ul class="button-list">
    {% for categorie in categories %}
      <li>
        <a href="{{path('app_categorie_de_services', {id: categorie.id })}}">
          {{categorie.nom}} 
        </a>
      </li>
    {% endfor %}    
  </ul>  
</div>
{# top service du mois 
    choisir un sous categ au hasard par mois et le mettre en avant 
 #}
<div class = "categorie_mois">
  <h2>Catégorie du mois</h2>
  <div class="card text-bg-dark">
    <img src="img/remise_en_forme.jpg" class="card-img" alt=""> {# attention il faut arranger le systeme pour que l'image corresponde peut-etre faire une relation #}
    <div class="contenu_categ_mois">
      <h5 class="card-title">{{categ_mois.nom}}</h5>
      <p class="card-text">{{categ_mois.description}}</p>
    </div>
  </div>
</div>


 {# Prestataire récent 
