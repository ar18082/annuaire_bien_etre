
{% extends 'base.html.twig' %}



{% block body %}
<div class='container'>
  <h1>Connectez-vous</h1>
</div>

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="container container_connexion">
      <form action="{{ path('app_login') }}" method="post" class="form_connexion">
        <div class='form-group'>
          <label for="username">E-mail:</label>
          <input type="text" class="connexion_email form-control" id="username" name="_username" value="{{ last_username }}">
        </div>
        <div class='form-group'>
          <label for="password">Mot de passe:</label>
          <input type="password" id="password" name="_password" class="connexion_password form-control">
        </div>

          {# If you want to control the URL the user is redirected to on success
          <input type="hidden" name="_target_path" value="/account"> #}
        <div class='form-group'>
          <button type="submit" class="connexion_submit btn">Connexion</button>
        </div>
      </form>
      <h6><a href="{{path('app_login')}}">Mot de passe oubli√© ? </a></h6>
    </div>
{% endblock %}
{% block footer %}
{% endblock %}